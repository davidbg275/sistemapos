<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.VentasController">
  <!-- RIGHT (verde) -->
  <right>
    <StackPane prefWidth="460" style="-fx-background-color: #43fb0bff;">
      <Label text="DETALLE DE VENTA" style="-fx-font-size: 16px;"/>
    </StackPane>
  </right>

  <!-- CENTER (resto del espacio) -->
  <center>
    <BorderPane style="-fx-background-color: rgba(2, 230, 255, 1);">
      <top>
        <VBox prefHeight="200" style="-fx-background-color: #fb0b0bff;">
          <Label text="Punto de Venta" style="-fx-font-size: 16px;"/>
          <Label text="Busca poductos y gestiona tu carrito de compras" style="-fx-font-size: 16px;"/>
        </VBox>
      </top>
    </BorderPane>
  </center>
</BorderPane>
